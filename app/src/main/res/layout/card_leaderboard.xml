<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/leaderboard_card"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/rank_leaderboard_card_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="24dp"
                tools:text="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture_leaderboard_card_image_view"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/user_name_leaderboard_card_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textColor="@color/primary_text_color"
                    tools:text="Farrah Khayra" />

                <TextView
                    android:id="@+id/level_name_leaderboard_card_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/secondary_text_color"
                    tools:text="Saviour" />

            </LinearLayout>

            <TextView
                android:id="@+id/total_posts_leaderboard_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                tools:text="1,032 ulasan" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>